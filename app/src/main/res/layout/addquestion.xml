<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/memo_more"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/loginbg3"
        android:gravity="center_vertical">

        <Button
            android:id="@+id/addquestion_bnback"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/back_button_selector" />

        <Button
            android:id="@+id/addquestion_button"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/put_button_selector"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:textColor="@color/colorWhite"
            android:textSize="20sp" />


    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="问题内容:"
                android:textSize="25sp" />

            <EditText
                android:id="@+id/addquestion_content_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                 />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="选项A:"
                android:textSize="25sp" />

            <EditText
                android:id="@+id/addAitem_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                 />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="选项B:"
                android:textSize="25sp" />

            <EditText
                android:id="@+id/addBitem_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="选项C:"
                android:textSize="25sp" />

            <EditText
                android:id="@+id/addCitem_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                 />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="选项D:"
                android:textSize="25sp" />

            <EditText
                android:id="@+id/addDitem_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                 />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="问题答案:"
                android:textSize="25sp" />

            <EditText
                android:id="@+id/addquestionresult_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="问题解析:"
                android:textSize="25sp" />

            <EditText
                android:id="@+id/addquestionanalysis_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>